@model Umniah_E_Sport.Tool.Models.GetVideoByIdVm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GetVideoByIdVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.GameId" class="control-label"></label>
                <select asp-for="@Model.GameId"
                        class="form-control" required
                        asp-items="@(new SelectList(@ViewBag.Games,"Id", "Title_EN"))">

                    <option>Select Script...</option>
                </select>
                <span asp-validation-for="@Model.GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageName" class="control-label">Old Image :</label>
                <input asp-for="ImageName" class="form-control" readonly />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div>
                <img src="~/Path/Videos/Images/@Model.ImageName" />
            </div>
            <div class="form-group">
                <label for="imageFile" class="control-label"></label>
                <input id="imageFile" name="imageFile" class="form-control" type="file" />
                <span for="imageFile" class="text-danger"></span>
            </div>
            <div>
                <video src="~/Path/Videos/@Model.VideoFileName" controls/>
            </div>
            <div class="form-group">
                <label asp-for="VideoFileName" class="control-label">Old Video :</label>
                <input asp-for="VideoFileName" class="form-control" readonly />
                <span asp-validation-for="VideoFileName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="videoFile" class="control-label"></label>
                <input id="videoFile" name="videoFile" class="form-control" type="file" />
                <span for="videoFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title_AR" class="control-label"></label>
                <input asp-for="Title_AR" class="form-control" />
                <span asp-validation-for="Title_AR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title_EN" class="control-label"></label>
                <input asp-for="Title_EN" class="form-control" />
                <span asp-validation-for="Title_EN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description_AR" class="control-label"></label>
                <input asp-for="Description_AR" class="form-control" />
                <span asp-validation-for="Description_AR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description_EN" class="control-label"></label>
                <input asp-for="Description_EN" class="form-control" />
                <span asp-validation-for="Description_EN" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="TimeStamp" class="control-label"></label>
                <input asp-for="TimeStamp" class="form-control" />
                <span asp-validation-for="TimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
