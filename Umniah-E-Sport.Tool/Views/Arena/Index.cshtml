                    @Html.DisplayFor(modelItem => item.Name_AR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName_EN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName_AR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageName)
                </td>
