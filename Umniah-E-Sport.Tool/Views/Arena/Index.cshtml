}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="example" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name_EN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name_AR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName_EN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName_AR)
            </th>
