@model IEnumerable<RelatedNewsCardVM>
@using Microsoft.AspNetCore.Mvc.Localization
@using Umniah_E_Sport.Portal.Models
@inject IViewLocalizer localizer
@{
    var isEn = localizer["Lang"].Value == "en";
   
}

@foreach (var card in Model)
{
    <div class="col-6 px-2 mb-3">
        <a asp-action="Details" asp-route-newsId="@card.Id">
            <div class="">
                <img src="~/Path/News/Images/@card.ImageName" alt="" class="d-block w-100" height="163">
                <span class="d-block fs-14 py-2">@(isEn ? card.Title_EN : card.Title_AR)</span>
                <span class="d-block fs-16 color-text-primary-alt line-1-2 h-2 mb-2">
                    @(isEn ? card.Description_EN : card.Description_AR)
                </span>
            </div>
        </a>
    </div>
}
