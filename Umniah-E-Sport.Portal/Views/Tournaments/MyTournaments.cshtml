        <a onclick="goBack()">
            <img class="rtl-svg mr-3" src="~/images/icons/leftarrow.svg" />
        </a>
        My Tournaments
    </div>
    <div class="">
        <img class="" src="~/images/icons/search.svg" alt="" />
    </div>
</div>

