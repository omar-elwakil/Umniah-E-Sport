    <section class="row no-gutters">
        <div>
        <div class="ff-vf-bold fs-16 p-3">@localizer["LiveTournaments"]</div>
         @if (Model.LiveTournaments == null || Model.LiveTournaments.Count() == 0)
      {
      }
      else
      {
            @foreach (var card in Model.LiveTournaments)
            {
                <!-- repeatable card -->
                <a asp-controller="Tournaments" asp-action="LaunchGame" asp-route-tournamentId=@card.Id>
                    <div class="tornment-card col-12 row no-gutters p-3 mb-1 bg-secondary">
            <div class="col-4">
                <img class="w-100 object-fit-cover" src="~/images/game1.png" height="200" />
            </div>
            <div class="col-7 mx-auto d-flex flex-column">
                <div class="fs-16">Umniah Iraq</div>
                <div class="fs-18 ff-vf-bold line-1-1">
                     @(isEn ? card.Title_EN : card.Title_AR)
                     @(isEn ? card.Description_EN : card.Description_AR)
                </div>
                <div class="fs-16 text-secondary my-2">
                  <img class="mr-2" src="~/images/icons/cup.svg" alt="" /> @card.PrizeAmount @localizer["ILS"]
                </div>
                <div class="fs-16 mt-1">
                    <img class="mr-2" src="~/images/icons/controller.svg" alt="" />
                     @(isEn ? card.TournamentTypeText_EN : card.TournamentTypeText_AR)
                </div>
                <div class="fs-16 mt-1">
                 <img class="mr-2" src="~/images/icons/location.svg" alt="" />@(isEn ? card.LocationText_EN : card.LocationText_AR)
                </div>
                <div class="mt-auto w-100 d-flex">
                    <button class="ml-auto
										mr-n3
										btn
										bg-highlight
										br-0
										py-1
										px-4
										text-primary
										ff-vf-bold
										fs-18
									">
                     @localizer["Enter"]
                    </button>
                </div>
            </div>
        </div>
        </a>
        }
