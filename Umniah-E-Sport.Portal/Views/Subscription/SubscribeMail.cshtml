@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    var isEn = localizer["Lang"].Value == "en";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@localizer[ "Umniah play"]</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    @if (isEn)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style.css" />
    }
    else
    {

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style.css" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style_rtl.css" />
    }




    
</head>

<body class="row no-gutters preload">
    <!-- this grid view is temporarily for web view but it's designed mainly for mobile view -->

    <div class="mobile-view col-xl-4 col-lg-4 col-md-6 col-12 mx-auto position-relative">
        <!-- stating main mobile design -->

        <div class="app-land text-center px-3">
            <div class="p-5">
                <div class="pt-5">
                    <img src="~/images/logo.png" />
                </div>
            </div>

            <div class="">
                <p class="fs-24 mt-5">
                   @localizer["CustomizeYourExperience"]
                </p>
            </div>

            <div class="">
                <form asp-action="SendOTP" asp-controller="Subscription" class="px-3 pt-3">
                    <div class="pt-4 land-form">
                        <div class="form-group mb-4">
                            <label for="" class="RedHatDisplaySemi">@localizer["Email"]</label>
                            <input type="text" name="email" id="msisdn" class="form-control" placeholder="example@example.com" aria-describedby="helpId">
                        </div>
                    </div>
                    <div class="land-sub px-4">
                        <button type="submit" class="mt-5 mx-auto w-90 btn bg-highlight ff-vf-bold fs-18 text-primary br-0 px-3 p-2">@localizer["Next"]</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <script src="./js/jquery-3.5.1.slim.min.js"></script>
    <script src="./js/bootstrap.bundle.min.js"></script>
    <script src="./js/app.js"></script>
</body>

</html>