@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    var isEn = localizer["Lang"].Value == "en";
    Layout = null;
}


@{
    if (ViewData["isUnSub"] != null)
    {
        ViewData["Title"] = "UnSubscribe";
    }
    else
    {

        ViewData["Title"] = "Subscribe";
    }

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@localizer["Umniah play"]</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    @if (isEn)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style.css" />
    }
    else
    {

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style.css" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style_rtl.css" />
    }




    @* <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />*@
</head>

<body class="row no-gutters preload">
    <!-- this grid view is temporarily for web view but it's designed mainly for mobile view -->
    <div class="mobile-view col-xl-4 col-lg-4 col-md-6 col-12 mx-auto position-relative justify-content-center d-flex align-items-center">
        <!-- stating main mobile design -->
        <div class="app-land text-center px-3 justify-content-center">
            <div class="d-flex justify-content-center align-items-center flex-column h-auto w-auto">
            <div class="p-5">
                <div class="pt-5">
                        <img src="~/images/logo.png" />
                </div>
            </div>
                <p class="fs-24 mt-5">
                    @localizer["CustomizeYourExperience"]
                </p>
                <p class="fs-24 mt-5">
                    @localizer["mainMessage-1"]
                    <span class="text-highlight font-weight-bold">@localizer["mainMessage-2"]</span>
                </p>

            <form asp-action="SendPinCode" asp-controller="Subscription" class="px-3 pt-3 position-relative my-auto">
                    <div class="pt-4 land-form">
                        <div class="form-group mb-4">
                            <label for="" class="RedHatDisplaySemi">@localizer["PhoneNumber"]</label>
                            <input type="text" name="PhoneNumber" id="msisdn" class="form-control" placeholder="964#########" aria-describedby="helpId">
                        </div>
                        @if (ViewBag.WrongMessage != null && ViewBag.WrongMessage != "")
                        {
                            <p class="text-danger">@ViewBag.WrongMessage</p>
                        }
                    </div>
                    @if (ViewData["isUnSub"] != null && (bool)ViewData["isUnSub"])
                    {
                        <input hidden name="IsUnSub" value="true" />
                    }
                    <div class="land-sub px-4">
                        <button type="submit" class="w-100 btn bg-highlight ff-vf-bold fs-18 text-primary br-0 p-2">@localizer["Next"]</button>

                    </div>
                        <p class="fs-20 mt-4">
                            @localizer["costMessage"]
                        </p>
                </form>

            </div>
        </div>
    </div>

    <script src="./js/jquery-3.5.1.slim.min.js"></script>
    <script src="./js/bootstrap.bundle.min.js"></script>
    <script src="./js/app.js"></script>
</body>

</html>