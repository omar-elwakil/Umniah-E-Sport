@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    var isEn = localizer["Lang"].Value == "en";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Umniah play</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    @if (isEn)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style.css" />
    }
    else
    {

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style.css" />
        <link asp-append-version=true rel="stylesheet" href="~/css/style_rtl.css" />
    }

</head>

<body class="row no-gutters preload">
    <!-- this grid view is temporarily for web view but it's designed mainly for mobile view -->

    <div class="mobile-view col-xl-4 col-lg-4 col-md-6 col-12 mx-auto position-relative">
        <!-- stating main mobile design -->

        <div class="app-land text-center px-3">
            <div class="p-5">
                <div class="pt-5">
                    <img src="~/images/logo.png" />
                </div>
            </div>

            <div class="">
                <p class="fs-24">
                    CustomizeYourExperience
                </p>
            </div>

            <div class="">
                <form asp-action="Verify" asp-controller="Subscription" method="post" id="enterPhone">
                    <div class="RedHatDisplaySemi">
                        <p class="text-center fs-18 RobotoBold">@localizer["welcomeTo"]</p>
                        <p class="text-center fs-16 mt-4 w-75 mx-auto">@localizer["message"]</p>
                    </div>

                    <div class="px-3">
                        <p class="text-center fs-16 mt-4 w-75 mx-auto RobotoBold">@localizer["EnterPinCode"]</p>

                        <div class="land-form">

                            <div class="form-group mb-4">
                                <input type="text" name="PinCode" id="" class="form-control" placeholder="0000" aria-describedby="helpId">
                                <div class="">
                                    <p class="fs-12 mx-3 mb-0" style="color: #890F0D"> @ViewBag?.WrongMessage</p>
                                </div>
                            </div>

                        </div>

                    </div>
                    @if (ViewBag.IsUnSub != null && ViewBag.IsUnSub == true)
                    {
                        <input hidden name="IsUnSub" value="true" />
                    }
                    else
                    {
                        <input hidden name="IsUnSub" value="false" />
                    }
                    <!-- Submit -->
                    <div class="px-4">
                        <button type="submit" class="w-100 btn bg-highlight ff-vf-bold fs-18 text-primary br-0 p-2">@localizer["Login"]</button>
                        @if (ViewBag.IsUnSub == null || ViewBag.IsUnSub == false)
                        {
                            <a asp-action="SendPinCode" asp-controller="Subscription" class="mt-4 w-100 btn bg-highlight ff-vf-bold fs-18 text-primary br-0 p-2">
                              @localizer["ResendPin"]
                            </a>
                        }
                    </div>

                </form>

            </div>
        </div>
    </div>

    <script src="./js/jquery-3.5.1.slim.min.js"></script>
    <script src="./js/bootstrap.bundle.min.js"></script>
    <script src="./js/app.js"></script>
</body>

</html>