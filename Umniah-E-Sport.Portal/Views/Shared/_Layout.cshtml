@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    var isEn = localizer["Lang"].Value == "en";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@localizer["Umniah play"]</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />

     @if (isEn)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />

        <link href="../css/style.css" rel="stylesheet" />
    }else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous" />


        <link href="../css/style.css" rel="stylesheet" />
        <link href="../css/style_rtl.css" rel="stylesheet" />
    }
    @*<link rel="stylesheet" href="./css/bootstrap.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />*@
    

</head>


<body>
    <div class="row no-gutters preload">
        <!-- this grid view is temporarily for web view but it's designed mainly for mobile view -->
        <div class="mobile-view col-xl-4 col-lg-4 col-md-6 col-12 mx-auto" style="background-color :#454B50">
            <!-- stating main mobile design -->
            <header class="
					p-3
					row
					no-gutters
					header-fixed
					position-sticky
					justify-content-between
					align-items-center
					bg-blur
				" style="background-color:#454B50">
                <img class="col-2 menu-icon" src="~/images/icons/menu.svg"  />

                <img src="../images/logo.png" width="30%"/>

                <a asp-action="Index" asp-controller="UserProfile" class="col-2">
                    <img class="w-80" src="~/images/icons/profile.svg" />
                </a>
            </header>

            <aside class="side-menu d-flex flex-column no-gutters ff-vf-bold pb-5">
                <div>
                    <img class="mx-auto d-block mt-3" src="~/images/logo.png" />
                   
                    <div class="row no-gutters mb-5 mt-3 px-4">
                        <div class="fs-36 text-highlight ff-vf-bold line-1-2 mt-5 pt-5">Umniah <span class="text-white">Esports</span> </div>
                        <img class="close-menu ml-auto" src="~/images/icons/exit.svg" />
                        @*<div class="col-12 fs-24 mt-3">@localizer["UmniahPlayArena"]</div>*@
                      
                    </div>

                  @*  <a class="col-9 row no-gutters mx-auto mb-3">
                        <div class="col-2 mr-3">
                            <img class="object-fit-cover mx-auto br-circle profile-pic" src="~/images/profile.jpg" width="65" height="65" />
                        </div>
                        <div class="text-center mt-3 float-right">
                            <img src="~/images/icons/close.svg" alt="" id="close_menu" class="mr-4" />
                        </div>
                        <div class="col-8 my-auto ml-3">
                        <div class="py-5 pl-4 RedHatDisplayRegular fs-24 color-text-primary">@localizer["JawwalPlayArena"]</div>
                        </div>
                        <div class="col-8 my-auto ml-3">
                            <div class="name fs-20">Ahmad Mahmoud</div>
                            <div class="number fs-14 ff-vf-reg">0100 000 0000</div>
                        </div>
                    </a>*@

                    <a asp-action="Index" asp-controller="Home" class="col-9 mt-4 mx-auto d-flex justify-content-between">
                        <span class="fs-18 RobotoBold color-text-primary">@localizer["Home"]</span>
                        <img class="rtl-svg" src="~/images/icons/rightarrow-w.svg" />
                    </a>
                    @* <a href="" class="col-9 mt-4 mx-auto d-flex justify-content-between">
                    Arcades
                    <img class="rtl-svg" src="./images/icons/rightarrow-w.svg" />
                    </a>*@
                    <a asp-action="Index" asp-controller="Arena" class="col-9 mt-4 mx-auto d-flex justify-content-between">
                        <span class="fs-18 RobotoBold color-text-primary">@localizer["Arenas"]</span>
                        <img class="rtl-svg" src="~/images/icons/rightarrow-w.svg" />
                    </a>
                    <a asp-action="Index" asp-controller="Tournaments" class="col-9 mt-4 mx-auto d-flex justify-content-between">
                        <span class="fs-18 RobotoBold color-text-primary">@localizer["Tournaments"]</span>
                        <img class="rtl-svg" src="~/images/icons/rightarrow-w.svg" />
                    </a>
                    <a asp-action="GetAllCasualGames" asp-controller="CasualGame" class="col-9 mt-4 mx-auto d-flex justify-content-between">
                        <span class="fs-18 RobotoBold color-text-primary">@localizer["Games"]</span>
                        <img class="rtl-svg" src="~/images/icons/rightarrow-w.svg" />
                    </a>
                    <a asp-action="Index" asp-controller="News" class="col-9 mt-4 mx-auto d-flex justify-content-between">
                        <span class="fs-18 RobotoBold color-text-primary">@localizer["News"]</span>
                        <img class="rtl-svg" src="~/images/icons/rightarrow-w.svg" />
                    </a>
                    <a asp-action="Index" asp-controller="Video" class="col-9 mt-4 mx-auto d-flex justify-content-between">
                        <span class="fs-18 RobotoBold color-text-primary">@localizer["Videos"]</span>
                        <img class="rtl-svg" src="~/images/icons/rightarrow-w.svg" />
                    </a>
                    <a asp-action="UnSubUser" asp-controller="Subscription" class="col-9 mt-4 mx-auto d-flex justify-content-between">
                        <span class="fs-18 RobotoBold color-text-primary">@localizer["UnSubscribe"]</span>
                        <img class="rtl-svg" src="~/images/icons/rightarrow-w.svg" />
                    </a>
                   @* <div class="col-12 mt-4 mx-auto d-flex justify-content-between align-items-center">
                        Language
                        
                        <img class="ml-auto mr-3" src="./images/icons/arabic.png" />
                        <img class="selected-lang" src="./images/icons/english.png" />
                    </div>*@
                    @await Html.PartialAsync("_CulturePartial")
                </div>
               
            </aside>

                <div class="page-content">
                    @RenderBody()
                </div>
           
            <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
            <script src="~/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/jquery-3.5.1.slim.min.js"></script>
            <script src="~/js/app.js"></script>
            <script src="~/js/store.js"></script>
            @RenderSection("Scripts", required: false)
        </div>
    </div>
</body>
</html>
