@model IEnumerable<GetRelatedVideosVm>
@using Microsoft.AspNetCore.Mvc.Localization
@using Umniah_E_Sport.Portal.Models
@inject IViewLocalizer localizer
@{
    var isEn = localizer["Lang"].Value == "en";
   
}
@foreach (var card in Model)
{
    <div class="col-6 px-2 mb-3">
        <!-- repeatable -->
    <a asp-action="Details" asp-controller="Video" asp-route-videoId="@card.Id">
            <img src="~/Path/Videos/Images/@card.ImageName" alt="" class="d-block w-100" height="163" />
            <div class="d-block fs-14 py-2">
                @(isEn ? card.Title_EN : card.Title_AR)
            </div>
        </a>
    </div>
}
